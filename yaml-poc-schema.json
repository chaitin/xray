{
    "$id": "https://chaitin.github.io/xray/assets/yaml-poc-schema.json",
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "xray poc schema",
    "description": "详情请参考 https://chaitin.github.io/xray/#/guide/poc",
    "type": "object",
    "properties": {
        "name": {
            "description": "POC 的名字",
            "default": "poc-yaml-",
            "type": "string"
        },
        "rules": {
            "description": "rules",
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "method": {
                        "description": "method",
                        "type": "string",
                        "enum": [
                            "GET",
                            "POST",
                            "PUT",
                            "DELETE",
                            "HEAD",
                            "OPTIONS"
                        ]
                    },
                    "path": {
                        "type": "string",
                        "description": "请求的完整Path，包括 querystring 等",
                        "default": "/"
                    },
                    "headers": {
                        "type": "object",
                        "description": "请求 HTTP 头，Rule 中指定的值会被覆盖到原始数据包的 HTTP 头中",
                        "additionalProperties": {
                            "type": "string"
                        },
                        "properties": {
                            "Content-Type": {
                                "description": "Content-Type",
                                "type": "string",
                                "enum": [
                                    "application/json",
                                    "application/x-www-form-urlencoded",
                                    "application/octet-stream",
                                    "text/html",
                                    "text/json",
                                    "text/plain",
                                    "multipart/form-data"
                                ]
                            },
                            "User-Agent": {
                                "description": "User-Agent",
                                "type": "string"
                            },
                            "Accept": {
                                "description": "Accept",
                                "type": "string"
                            },
                            "Referer": {
                                "description": "Referer",
                                "type": "string"
                            }
                        }
                    },
                    "follow_redirects": {
                        "description": "是否允许跟随3xx跳转",
                        "type": "boolean"
                    },
                    "body": {
                        "type": "string",
                        "description": "body"
                    },
                    "search": {
                        "type": "string",
                        "description": "查找返回包中的内容"
                    },
                    "expression": {
                        "type": "string",
                        "description": "如何匹配 response",
                        "default": "|\n  status == 200 && body.bcontains(b'data')"
                    }
                },
                "required": [
                    "method",
                    "path",
                    "expression"
                ]
            }
        },
        "detail": {
            "description": "其他可选的信息，漏洞模板使用",
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        }
    },
    "required": [
        "name",
        "rules"
    ]
}
